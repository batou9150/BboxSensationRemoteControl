<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <Button
            android:text="@string/b_power_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/b_power"
            android:tag='0'
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="8dp"
            />

    <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:text="@string/edit_text_ip_address_default"
            android:ems="10"
            android:id="@+id/edit_text_ip_address"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="8dp"
            app:layout_constraintEnd_toStartOf="@+id/b_power"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            app:layout_constraintStart_toEndOf="@+id/b_search_target"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            tools:ignore="LabelFor"/>

    <Button
            android:text="@string/b_search_target_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/b_search_target"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="8dp"
            style="@style/Widget.AppCompat.Button.Small"/>

    <include
            android:layout_width="189dp"
            android:layout_height="204dp"
            layout="@layout/button_0_to_9"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            app:layout_constraintStart_toEndOf="@+id/include"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/include2"/>

    <include
            android:layout_width="140dp"
            android:layout_height="140dp"
            layout="@layout/dpad"
            android:id="@+id/include"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/include2"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"/>

    <include
            android:layout_width="201dp"
            android:layout_height="86dp"
            layout="@layout/up_down"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/b_search_target"
            android:id="@+id/include2"/>

</android.support.constraint.ConstraintLayout>