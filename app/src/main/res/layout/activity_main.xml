<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <Button
            android:text="@string/b_power_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/b_power"
            android:tag='0'
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="8dp"
            />

    <Button
            android:text="@string/b_volume_up_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/b_volume_up"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            android:tag='27'
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/edit_text_ip_address"
            style="@style/Widget.AppCompat.Button.Small"/>

    <Button
            android:text="@string/b_volume_down_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/b_volume_down"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/b_volume_up"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            android:tag='28'
            style="@style/Widget.AppCompat.Button.Small"/>

    <Button
            android:text="@string/b_program_up_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/b_program_up"
            android:tag='25'
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/b_power"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            style="@style/Widget.AppCompat.Button.Small"/>

    <Button
            android:text="@string/b_program_down"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/b_program_down"
            android:tag='26'
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/b_program_up"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            style="@style/Widget.AppCompat.Button.Small"/>

    <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:text="@string/edit_text_ip_address_default"
            android:ems="10"
            android:id="@+id/edit_text_ip_address"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="8dp"
            app:layout_constraintEnd_toStartOf="@+id/b_power"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            app:layout_constraintStart_toEndOf="@+id/b_search_target"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"/>

    <Button
            android:text="@string/b_search_target_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/b_search_target"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="8dp"
            style="@style/Widget.AppCompat.Button.Small"/>

    <include
            android:layout_width="0dp"
            android:layout_height="0dp"
            layout="@layout/button_0_to_9"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="8dp"
            app:layout_constraintTop_toBottomOf="@+id/include"
            android:layout_marginTop="8dp"/>

    <include
            android:layout_width="140dp"
            android:layout_height="140dp"
            layout="@layout/dpad"
            android:id="@+id/include"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/edit_text_ip_address"
            app:layout_constraintStart_toEndOf="@+id/b_volume_down"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            app:layout_constraintEnd_toStartOf="@+id/b_program_down"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"/>

</android.support.constraint.ConstraintLayout>