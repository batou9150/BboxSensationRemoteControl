<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <Button
            android:text="@string/b_power_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/b_power"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="8dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            android:tag='0'/>

    <Button
            android:text="@string/b_volume_up_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/b_volume_up"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/b_power"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            android:tag='27'/>

    <Button
            android:text="@string/b_volume_down_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/b_volume_down"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/b_volume_up"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            android:tag='28'/>

    <Button
            android:text="@string/b_program_up_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/b_program_up"
            app:layout_constraintStart_toEndOf="@+id/b_volume_up"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            android:tag='25'
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/b_power"/>

    <Button
            android:text="@string/b_program_down"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/b_program_down"
            app:layout_constraintStart_toEndOf="@+id/b_volume_down"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            android:tag='26'
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/b_program_up"/>

</android.support.constraint.ConstraintLayout>